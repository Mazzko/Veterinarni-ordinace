<UserControl x:Class="VeterinarniOrdinace.Views.OwnersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal">
            <Button Content="🞤 Přidat" Command="{Binding AddOwnerCommand}" Style="{StaticResource PrimaryButton}"/>
            <Button Content="🗑 Smazat" Command="{Binding DeleteOwnerCommand}" Style="{StaticResource SecondaryButton}"/>
            <Button Content="🐾 + Zvíře" Command="{Binding AddAnimalForOwnerCommand}" Style="{StaticResource PrimaryButton}"/>
                <TextBox Width="220" Margin="16,0,0,0" Text="{Binding OwnerSearchText, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Obsah: Seznam vlevo, detail vpravo -->
        <Grid Grid.Row="1" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Seznam -->
            <DataGrid ItemsSource="{Binding FilteredOwners}" 
                      SelectedItem="{Binding SelectedOwner}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Jméno" Binding="{Binding FullName}" Width="2*"/>
                    <DataGridTextColumn Header="Telefon" Binding="{Binding Phone}" Width="*"/>
                    <DataGridTextColumn Header="E-mail" Binding="{Binding Email}" Width="*"/>
                    <DataGridTextColumn Header="Adresa" Binding="{Binding Address}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Detail -->
            <Border Grid.Column="1" Margin="12,0,0,0" Padding="12"
                    BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="6" Background="{StaticResource Brush.BgAlt}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Detail majitele" FontWeight="SemiBold" Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="1" Text="Jméno" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedOwner.FullName, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="2" Text="Telefon" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Margin="0,8,0,0" Text="{Binding SelectedOwner.Phone, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="3" Text="E-mail" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Margin="0,8,0,0" Text="{Binding SelectedOwner.Email, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="4" Text="Adresa" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Margin="0,8,0,0" Text="{Binding SelectedOwner.Address, UpdateSourceTrigger=PropertyChanged}"/>

                    <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                        <Button Content="Zrušit" Command="{Binding CancelOwnerCommand}" Margin="0,0,8,0" MinWidth="110" MinHeight="32" Style="{StaticResource SecondaryButton}"/>
                        <Button Content="Uložit" Command="{Binding UpdateOwnerCommand}" MinWidth="110" MinHeight="32" Style="{StaticResource PrimaryButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>