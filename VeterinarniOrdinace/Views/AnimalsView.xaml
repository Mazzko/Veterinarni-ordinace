<UserControl x:Class="VeterinarniOrdinace.Views.AnimalsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal">
            <Button Content="🗑 Smazat" Command="{Binding DeleteAnimalCommand}" Style="{StaticResource SecondaryButton}"/>
            <TextBox Width="220" Margin="16,0,0,0" Text="{Binding AnimalSearchText, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Obsah -->
        <Grid Grid.Row="1" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Seznam -->
            <DataGrid ItemsSource="{Binding FilteredAnimals}" 
                      SelectedItem="{Binding SelectedAnimal}"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Jméno" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="Druh" Binding="{Binding Species}" Width="*"/>
                    <DataGridTextColumn Header="Plemeno" Binding="{Binding Breed}" Width="*"/>
                    <DataGridTextColumn Header="Majitel" Binding="{Binding OwnerName}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Detail -->
            <Border Grid.Column="1" Margin="12,0,0,0" Padding="12"
                    BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="6" Background="{StaticResource Brush.BgAlt}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Detail zvířete" FontWeight="SemiBold" Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="1" Text="Majitel" VerticalAlignment="Top" Margin="0,8,0,0" />
                    <ComboBox Grid.Row="1" Grid.Column="1" Margin="0,8,0,0" ItemsSource="{Binding Owners, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedOwnerForAnimal}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding FullName}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Phone}" Opacity="0.7" FontSize="12"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Grid.Row="2" Text="Jméno" VerticalAlignment="Center" />
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SelectedAnimal.Name, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="3" Text="Druh" VerticalAlignment="Center" Margin="0,8,0,0" />
                    <TextBox Grid.Row="3" Grid.Column="1" Margin="0,8,0,0" Text="{Binding SelectedAnimal.Species, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="4" Text="Plemeno" VerticalAlignment="Center" Margin="0,8,0,0" />
                    <TextBox Grid.Row="4" Grid.Column="1" Margin="0,8,0,0" Text="{Binding SelectedAnimal.Breed, UpdateSourceTrigger=PropertyChanged}"/>

                    
                    
                    <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                        <Button Content="Zrušit" Command="{Binding CancelAnimalCommand}" Margin="0,0,8,0" MinWidth="110" MinHeight="32" Style="{StaticResource SecondaryButton}"/>
                        <Button Content="Uložit" Command="{Binding UpdateAnimalCommand}" MinWidth="110" MinHeight="32" Style="{StaticResource PrimaryButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>