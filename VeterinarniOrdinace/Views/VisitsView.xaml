<UserControl x:Class="VeterinarniOrdinace.Views.VisitsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal">
            <Button Content="🗑 Smazat" Command="{Binding DeleteVisitCommand}" Style="{StaticResource SecondaryButton}"/>
            <TextBox Width="220" Margin="16,0,0,0" Text="{Binding VisitSearchText, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Obsah -->
        <Grid Grid.Row="1" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Seznam -->
            <DataGrid ItemsSource="{Binding FilteredVisits}" 
                      SelectedItem="{Binding SelectedVisit}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Datum" Binding="{Binding Date, StringFormat={}{0:dd.MM.yyyy HH:mm}}" Width="100"/>
                    <DataGridTextColumn Header="Zvíře" Binding="{Binding AnimalName}" Width="Auto"/>
                    <DataGridTextColumn Header="Důvod" Binding="{Binding Reason}" Width="2*"/>
                    <DataGridTextColumn Header="Diagnóza" Binding="{Binding Diagnosis}" Width="*"/>
                    <DataGridTextColumn Header="Cena" Binding="{Binding Price}" Width="60"/>
                    <DataGridTextColumn Header="Stav" Binding="{Binding Status}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Detail -->
            <Border Grid.Column="1" Margin="12,0,0,0" Padding="12"
                    BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="6" Background="{StaticResource Brush.BgAlt}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Detail návštěvy" FontWeight="SemiBold" Margin="0,0,0,8"/>


                    <TextBlock Grid.Row="1" Text="Datum" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <DatePicker Grid.Row="1" Grid.Column="1" Margin="0,8,0,0" SelectedDate="{Binding SelectedVisitDateOnly, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Grid.Row="2" Text="Čas" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Margin="0,8,0,0" Text="{Binding SelectedVisitTimeText, UpdateSourceTrigger=PropertyChanged}" ToolTip="HH:mm (např. 10:30)" />

                    <TextBlock Grid.Row="3" Text="Zvíře" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Margin="0,8,0,0" Text="{Binding SelectedVisit.AnimalName, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="4" Text="Důvod" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Margin="0,8,0,0" Text="{Binding SelectedVisit.Reason, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="5" Text="Diagnóza" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox Grid.Row="5" Grid.Column="1" Margin="0,8,0,0" Text="{Binding SelectedVisit.Diagnosis, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="6" Text="Cena" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox Grid.Row="6" Grid.Column="1" Margin="0,8,0,0" Text="{Binding SelectedVisit.Price, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="7" Text="Stav" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <ComboBox Grid.Row="7" Grid.Column="1" Margin="0,8,0,0" ItemsSource="{Binding VisitStatuses}" SelectedItem="{Binding SelectedVisit.Status, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                        <Button Content="Zrušit" Command="{Binding CancelVisitCommand}" Margin="0,0,8,0" MinWidth="110" MinHeight="32" Style="{StaticResource SecondaryButton}"/>
                        <Button Content="Uložit" Command="{Binding UpdateVisitCommand}" MinWidth="110" MinHeight="32" Style="{StaticResource PrimaryButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>